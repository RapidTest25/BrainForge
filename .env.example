# ═══════════════════════════════════════════
# BrainForge Environment Variables
# ═══════════════════════════════════════════

# ── Database ──────────────────────────────
DATABASE_URL="postgresql://brainforge:brainforge_secret@localhost:5432/brainforge?schema=public"

# ── Redis ─────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ── JWT ───────────────────────────────────
JWT_ACCESS_SECRET="your-access-secret-min-32-chars-long-here"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars-long-here"

# ── Encryption (for AI keys) ──────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-64-char-hex-encryption-key-here-generate-with-crypto"

# ── Backend ───────────────────────────────
API_PORT=4000
API_HOST="0.0.0.0"
NODE_ENV="development"

# ── Frontend ──────────────────────────────
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_WS_URL="http://localhost:4000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ── CORS ──────────────────────────────────
CORS_ORIGIN="http://localhost:3000"
